<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <record id="view_contract_increase_form" model="ir.ui.view">
    <field name="name">contract.increase.form</field>
    <field name="model">contract.increase</field>
    <field name="arch" type="xml">
      <form string="Contract Increase">
        <sheet>
          <group>
            <field name="partner_id" />
            <field name="contract_id" />
            <field name="date" />
            <field name="application_date" />
            <field name="rate" widget="percentage" />
            <field name="description" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_contract_increase_tree" model="ir.ui.view">
    <field name="name">contract.increase.tree</field>
    <field name="model">contract.increase</field>
    <field name="arch" type="xml">
      <tree string="Contract Increase">
        <field name="partner_id" />
        <field name="contract_id" />
        <field name="date" />
        <field name="application_date" />
        <field name="rate" widget="percentage" />
        <field name="description" />
      </tree>
    </field>
  </record>

  <record id="action_contract_increase" model="ir.actions.act_window">
    <field name="name">Contract Increases</field>
    <field name="res_model">contract.increase</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem
        id="menu_contract_increase"
        name="Contract Increases"
        parent="sale.menu_sale_config"
        action="action_contract_increase"
    />
</odoo>
