<?xml version="1.0" ?>
<odoo>
    <!-- allow internal people to crud agreements -->
    <record id="rule_agreement_crud" model="ir.rule">
        <field name="name">CRUD agreement</field>
        <field name="model_id" ref="agreement.model_agreement" />
        <field name="domain_force">[('is_template','=', False)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]" />
    </record>
    <!-- allow only this group to view and edit templates -->
    <record id="rule_agreement_template_crud" model="ir.rule">
        <field name="name">CRUD agreement templates</field>
        <field name="model_id" ref="agreement.model_agreement" />
        <field name="domain_force">[(1,'=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_agreement_template_editors'))]" />
    </record>
    <record id="rule_agreement_report_crud" model="ir.rule">
        <field name="name">CRUD agreement reports</field>
        <field name="model_id" ref="agreement.model_agreement" />
        <field name="domain_force">[('is_template','=', False)]</field>
        <field name="groups" eval="[(4, ref('group_agreement_report_editors'))]" />
    </record>
    <record id="rule_agreement_report_r" model="ir.rule">
        <field name="name">R agreement reports</field>
        <field name="model_id" ref="agreement.model_agreement" />
        <field name="domain_force">[('is_template','=', False)]</field>
        <field name="groups" eval="[(4, ref('group_agreement_report_users'))]" />
    </record>
</odoo>
