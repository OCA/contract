<?xml version="1.0" ?>
<odoo>
    <record id="view_wizard_sign_agreement_form" model="ir.ui.view">
        <field name="name">wizard.sign.agreement.form.view</field>
        <field name="model">wizard.sign.agreement</field>
        <field name="arch" type="xml">
            <form string="Lock agreement">
                <group>
                    <field name="signature_date" class="oe_inline" />
                </group>
                <footer>
                    <button
                        name="action_sign_agreement"
                        string="Lock"
                        type="object"
                        class="oe_highlight"
                    />
                    <button string="Cancel" special="cancel" class="btn-secondary" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
