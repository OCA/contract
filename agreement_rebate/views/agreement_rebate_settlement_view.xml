<?xml version="1.0"?>
<odoo>

    <record id="agreement_rebate_settlement_search" model="ir.ui.view">
        <field name="name">agreement.rebate.settlement.search</field>
        <field name="model">agreement.rebate.settlement</field>
        <field name="arch" type="xml">
            <search string="Search agreement settlements">
                <field name="name" filter_domain="['|', ('name', 'ilike', self), ('line_ids.agreement_id.code', 'ilike', self)]"
                       string="Name or agreement code"/>
                <field name="partner_id"/>
                <separator/>
                <filter name="not_invoiced" string="Not invoiced" domain="[('line_ids.invoice_line_id', '=', False)]"/>
                <filter name="invoiced" string="Invoiced" domain="[('line_ids.invoice_line_id', '!=', False)]"/>
                <group name="groupby">
                    <filter name="partner_groupby" string="Partner"
                        context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="agreement_rebate_settlement_tree" model="ir.ui.view">
        <field name="name">agreement.rebate.settlement</field>
        <field name="model">agreement.rebate.settlement</field>
        <field name="arch" type="xml">
            <tree string="Rebate Settlements">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="amount_invoiced"/>
                <field name="amount_rebate"/>
            </tree>
        </field>
    </record>

    <record id="agreement_rebate_settlement_form" model="ir.ui.view">
        <field name="name">agreement.rebate.settlement</field>
        <field name="model">agreement.rebate.settlement</field>
        <field name="arch" type="xml">
            <form string="Rebate Settlements">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_show_agreement" type="object"
                            class="oe_stat_button" icon="fa-pencil-square-o">
                            <span>Agreement</span>
                        </button>
                        <button name="action_show_detail" type="object"
                            class="oe_stat_button" icon="fa-pencil-square-o">
                            <span>Details</span>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                        </group>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="amount_invoiced"/>
                        <field name="amount_rebate"/>
                    </group>
                    <group string="Lines">
                        <field name="line_ids" nolabel="1">
                            <tree string="Rebate Settlement lines">
                                <field name="rebate_type" invisible="1"/>
                                <field name="amount_invoiced"/>
                                <field name="percent"/>
                                <field name="amount_rebate"/>
                                <field name="amount_from" attrs="{'invisible': [('rebate_type', 'not in', ['section_total', 'section_prorated'])]}"/>
                                <field name="amount_to" attrs="{'invisible': [('rebate_type', 'not in', ['section_total', 'section_prorated'])]}"/>
                                <button name="action_show_detail" type="object" icon="fa-pencil-square-o" string="Show details"
                                        attrs="{'invisible': [('rebate_type', '!=', 'line')]}"/>
                                <field name="target_domain" groups="base.group_no_one"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="agreement_rebate_settlement_line_tree" model="ir.ui.view">
        <field name="name">agreement.rebate.settlement.line</field>
        <field name="model">agreement.rebate.settlement.line</field>
        <field name="arch" type="xml">
            <tree string="Rebate Settlement lines" create="false" edit="false">
                <field name="date"/>
                <field name="partner_id"/>
                <field name="agreement_id"/>
                <field name="amount_invoiced" sum="Total"/>
                <field name="percent"/>
                <field name="amount_rebate" sum="Total"/>
                <field name="amount_from"/>
                <field name="amount_to"/>
                <button name="action_show_detail" type="object" icon="fa-pencil-square-o" string="Show details"/>
                <field name="target_domain" groups="base.group_no_one"/>
            </tree>
        </field>
    </record>

    <record id="agreement_rebate_settlement_line_search" model="ir.ui.view">
        <field name="name">agreement.rebate.settlement.line.search</field>
        <field name="model">agreement.rebate.settlement.line</field>
        <field name="arch" type="xml">
            <search string="Search settlement lines">
                <field name="partner_id" operator="child_of"/>
                <separator/>
                <field name="agreement_id" string="Agreement"/>
                <separator/>
                <filter name="not_invoiced" string="Not invoiced" domain="[('invoice_line_id', '=', False)]"/>
                <filter name="invoiced" string="Invoiced" domain="[('invoice_line_id', '!=', False)]"/>
                <separator/>
                <filter name="date" string="Period" date="date"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_partner_id" string="Partner" context="{'group_by':'partner_id'}"/>
                    <filter name="group_by_agreement_id" string="Agreement" context="{'group_by':'agreement_id'}"/>
                    <separator/>
                    <filter string="Date" name="date" context="{'group_by':'date'}"/>
                </group>
           </search>
        </field>
    </record>

    <record id="agreement_rebate_settlement_action" model="ir.actions.act_window">
        <field name="name">Agreement settlements</field>
        <field name="res_model">agreement.rebate.settlement</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_not_invoiced': 1}</field>
    </record>

    <record id="agreement_rebate_settlement_line_action" model="ir.actions.act_window">
        <field name="name">Agreement settlement lines</field>
        <field name="res_model">agreement.rebate.settlement.line</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="context">{'search_default_not_invoiced': 1}</field>
    </record>

</odoo>
