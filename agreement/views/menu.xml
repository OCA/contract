    <menuitem
            name="Reporting"
            id="agreement_reporting"
            sequence="40"
            parent="agreement_root"
            groups="agreement.group_agreement_manager"/>

    <menuitem
            name="Agreements"
            id="agreement_agreement_reporting"
            sequence="10"
            parent="agreement_reporting"
            action="action_agreement_report_order"/>

