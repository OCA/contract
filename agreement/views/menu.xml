            name="Types"
            id="agreement_types"
            parent="agreement_configuration"
            sequence="50"
            action="partner_agreement_action_type"/>
    <menuitem
            name="Sub-Types"
            id="agreement_subtypes"
            parent="agreement_configuration"
            sequence="60"
            action="partner_agreement_action_subtype"/>
