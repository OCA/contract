<?xml version="1.0"?>

<odoo>


    <record id="agreement_form" model="ir.ui.view">
        <field name="model">agreement</field>
        <field name="inherit_id" ref="agreement_account.agreement_form"/>
        <field name="arch" type="xml">
            <group name="out_invoices" position="inside">
                <field name="partner_invoice_id"/>
            </group>
        </field>
    </record>

    <record id="agreement_tree" model="ir.ui.view">
        <field name="model">agreement</field>
        <field name="inherit_id" ref="agreement_account.agreement_tree"/>
        <field name="arch" type="xml">
            <field name="signature_date" position="after">
                <field name="partner_invoice_id"/>
            </field>
        </field>
    </record>


</odoo>
