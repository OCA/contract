<odoo>

    <!-- form view-->
    <record id="contract_form_view" model="ir.ui.view">
        <field name="name">contract.surcharge</field>
        <field name="model">contract.contract</field>
        <field name="inherit_id" ref="contract.contract_contract_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Surcharge">
                    <group id="surcharge">
                        <group id="surcharge_left">
                            <field name="surcharge_deadline"/>
                            <field name="surcharge_percent"/>
                            <field name="surcharge_product_id"/>
                        </group>
                        <group id="surcharge_right"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
