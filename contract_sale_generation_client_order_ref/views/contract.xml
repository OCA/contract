<odoo>
    <record id="contract_contract_form_view_recurring_sale_form" model="ir.ui.view">
        <field name="name">contract.contract.form.recurring.sale.form</field>
        <field name="model">contract.contract</field>
        <field name="inherit_id" ref="contract.contract_contract_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='info']//field[@name='code']" position="after">
                <field name="generation_type" invisible="1" />
                <field
                    name="client_order_ref"
                    attrs="{'invisible': [('generation_type','=','invoice')]}"
                />
            </xpath>
        </field>
    </record>
</odoo>
